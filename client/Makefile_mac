CC=gcc-12 #Här måste ni välja er version, troligen
SRCDIR=./src
INCDIR=./include

INCLUDE = /opt/homebrew/include/SDL2
LIBS = /opt/homebrew/lib
CFLAGS = -g -I$(INCLUDE) -c
LDFLAGS = -lSDL2main -lSDL2 -lSDL2_image -lSDL2_ttf -lm

characterClient: main.o character.o world.o bullet.o
	$(CC) -o characterClient main.o character.o world.o bullet.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c $(INCDIR)/netdata.h $(INCDIR)/character.h $(INCDIR)/world.h 
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

character.o: $(COMMONSRCDIR)/character.c $(INCDIR)/netdata.h $(INCDIR)/character.h $(INCDIR)/bullet.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/character.c

world.o: $(COMMONSRCDIR)/world.c $(INCDIR)/world.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/world.c

bullet.o: $(COMMONSRCDIR)/bullet.c $(INCDIR)/bullet.h $(INCDIR)/netdata.h
	$(CC) $(CFLAGS) $(COMMONSRCDIR)/bullet.c

clean:
	rm rocket
	rm *.o
